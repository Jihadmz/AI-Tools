<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AITools" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/state_blue</item>
        <item name="colorPrimaryVariant">@color/violet_blue</item>
        <item name="colorPrimaryDark">@color/midnight_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightest_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorAccent">@color/violet_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
<!--                     Navigation bar color       -->
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@drawable/bg</item>
        <item name="tabBackground">?attr/colorAccent</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="cardViewStyle">@style/cardStyle</item>
        <item name="android:dialogTheme">@style/dialogStyle</item>
    </style>


<!--            Components style                -->
    <style name="cardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="textViewStyleInCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="dialogAnimations">
        <item name="android:windowEnterAnimation">@anim/from_top</item>
        <item name="android:windowExitAnimation">@anim/to_bottom</item>
    </style>

</resources>